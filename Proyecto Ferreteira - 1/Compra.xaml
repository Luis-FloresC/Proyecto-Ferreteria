<UserControl x:Class="Proyecto_Ferreteira___1.Compra"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Ferreteira___1" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             
              TextElement.Foreground="{DynamicResource MaterialDesignBody}"
              TextElement.FontWeight="Regular"
              TextElement.FontSize="13"
              TextOptions.TextFormattingMode="Ideal"
              TextOptions.TextRenderingMode="Auto"
              FontFamily="{DynamicResource MaterialDesignFont}"          
              Background="#656c72"            
             >
    <Grid Width="auto" Height="auto" >
        <Grid.ColumnDefinitions>

            <ColumnDefinition  Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions >
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10"
            Background="#363636"
            Foreground="White"
            Width="200"
            Padding="8">
            <TextBlock
                    FontSize="16"
                    Text="Sistema de Compras" />
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="2" Grid.Column="0"  Margin="5"
                Background="#363636"
                Foreground="White"
                Width="150"
                Padding="8">
            <TextBlock
                    FontSize="16"
                    Text="Producto" />
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="3" Grid.Column="0"  Margin="5"
            Background="#363636"
            Foreground="White"
            Width="150"
            Padding="8">
            <TextBlock 
                    FontSize="16"
                    Text="Cantidad" />
        </materialDesign:Card>

        <materialDesign:Card  Grid.Row="1" Grid.Column="0"  Margin="5" 
            Background="#363636"
            Foreground="White"
            Width="150"
            Padding="8">
            <TextBlock 
                    FontSize="16"
                    Text="Fecha de Compra" />
        </materialDesign:Card>

        <TextBox ToolTip="Nombre del Producto" Margin="5" Grid.Row="2" Grid.Column="1" Foreground="#363636" BorderBrush="#363636" FontSize="15"></TextBox>
        <TextBox ToolTip="Cantidad de Producto"  Margin="5" Grid.Row="3" Grid.Column="1" Foreground="#363636" BorderBrush="#363636" FontSize="15"></TextBox>
        <TextBox  ToolTip="Formato de fecha Año/Mes/Día" Margin="5" Grid.Row="1" Grid.Column="1" Foreground="#363636" BorderBrush="#363636" FontSize="15"></TextBox>
        <TextBox Background="WhiteSmoke" Foreground="#363636" FontSize="13" Margin="10 0 0 0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3"  />
        
        <Label Content="Productos Por Proveedor" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0 10 0 0" 
               FontSize="18" FontFamily="Champagne &amp; Limousines"/>


        <!-- ListBox que contendran los datos de Proveedores y la informacion de productos-->
        <ListBox Margin="5" Background="WhiteSmoke" Grid.Row="1" Grid.Column="3" Grid.RowSpan="5"  >
        </ListBox>

        <ListBox Margin="5"  Background="WhiteSmoke" Grid.Row="1" Grid.Column="4"  Grid.RowSpan="5" >
        </ListBox>

        <ListBox Margin="5" Background="WhiteSmoke" Grid.Row="1" Grid.Column="5" Grid.RowSpan="5" Grid.ColumnSpan="2" >
        </ListBox>

        <Label Content="Proveedores" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" Margin="0 10 0 0" 
               FontSize="18" FontFamily="Champagne &amp; Limousines"/>

        <Label Content="Productos" Grid.Row="0" Grid.Column="4"  HorizontalAlignment="Center" Margin="0 10 0 0" 
               FontSize="18" FontFamily="Champagne &amp; Limousines"/>

        <Label Content="Cantidad." Grid.Row="0" Grid.Column="5"  HorizontalAlignment="Center" Margin="0 10 0 0" 
               FontSize="18" FontFamily="Champagne &amp; Limousines"/>

        <!--Boton de comprar boton -->
        <Button Margin="5" Grid.Column="4" Grid.Row="8"
            Style="{StaticResource MaterialDesignFlatLightBgButton}"
            ToolTip="Hacer la compra"
             Content="Comprar" />
        
        <!--Textbox de descuento-->
      
        <TextBox Grid.Column="0" Grid.Row="8" FontSize="18"
        materialDesign:HintAssist.Hint="Descuento"
        materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
        materialDesign:HintAssist.FloatingScale="0.50"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
         />

        <TextBox Grid.Column="1" Grid.Row="8" FontSize="18"
        materialDesign:HintAssist.Hint="ISV"
        materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
        materialDesign:HintAssist.FloatingScale="0.50"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
         />

        <TextBox Grid.Column="2" Grid.Row="8" FontSize="18"
        materialDesign:HintAssist.Hint="Subtotal"
        materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
        materialDesign:HintAssist.FloatingScale="0.50"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
         />

        <TextBox Grid.Column="3" Grid.Row="8" FontSize="18"
        materialDesign:HintAssist.Hint="Flete"
        materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
        materialDesign:HintAssist.FloatingScale="0.50"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
         />

    </Grid>
</UserControl>
