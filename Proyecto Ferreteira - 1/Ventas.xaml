<UserControl x:Class="Proyecto_Ferreteira___1.Ventas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Ferreteira___1"
             mc:Ignorable="d" 
             d:DesignHeight="595" d:DesignWidth="800" Background="#242222" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Content="VENTAS" Grid.ColumnSpan="11" HorizontalAlignment="Center" FontSize="30" Foreground="White"/>

        <Label Content="Cliente" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="0 5" FontSize="18" Foreground="White"/>
        <Label Content="ID:" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Margin="0 3" FontSize="18" Foreground="White"/>
        <TextBox Name="txtIdCliente" Grid.Row="3" Grid.Column="2" FontSize="18" Margin="0 8"  Background="White"/>
        <Label Content="Nombre:" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left" Margin="2 3" FontSize="18" Foreground="White"/>
        <TextBox Name="txtNombreCliente" Grid.Row="3" Grid.Column="4" FontSize="18" Margin="0 8"  Background="White"/>

        <Label Content="Tipo de pago" Grid.Row="2" Grid.Column="6" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0 5" FontSize="18" Foreground="White"/>
        <Label Content="Tipo:" Grid.Row="3" Grid.Column="6" HorizontalAlignment="Center" Margin="0 3" FontSize="18" Foreground="White"/>
        <ComboBox Name="cbTipoPago" Grid.ColumnSpan="2" Grid.Column="7" HorizontalAlignment="Left" Margin="0,8" Grid.Row="3" Background="White" Width="159" Height="27"/>


        <Label Content="Producto" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="0 5" FontSize="18" Foreground="White"/>
        <Label Content="ID:" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" Margin="0 3" FontSize="18" Foreground="White"/>
        <TextBox Name="txtIdProducto" Grid.Row="5" Grid.Column="2" FontSize="18" Margin="0 8"  Background="White"/>
        <Label Content="Nombre:" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Left" Margin="2 3" FontSize="18" Foreground="White"/>
        <TextBox Name="txtNombreProducto" Grid.Row="5" Grid.Column="4" FontSize="18" Margin="0 8"  Background="White"/>
        <Label Content="Precio:" Grid.Row="5" Grid.Column="5" HorizontalAlignment="Center" Margin="0 3" FontSize="18" Foreground="White"/>
        <TextBox Name="txtPrecio" Grid.Row="5" Grid.Column="6" FontSize="18" Margin="0 8"  Background="White"/>
        <Label Content="Cantidad:" Grid.Row="5" Grid.Column="7" HorizontalAlignment="Center" Margin="0 3" FontSize="18" Foreground="White"/>
        <TextBox Name="txtCantidad" Grid.Row="5" Grid.Column="8" FontSize="18" Margin="0 8"  Background="White"/>
        <DataGrid Name="dgDetalleVenta" Grid.ColumnSpan="8" Grid.Column="1" HorizontalAlignment="Left" Height="251" Grid.Row="6" Grid.RowSpan="6" VerticalAlignment="Top" Width="584" Margin="0,2,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="60"/>
                <DataGridTextColumn Header="PRODUCTO" Width="*"/>
                <DataGridTextColumn Header="PRECIO" Width="*"/>
                <DataGridTextColumn Header="CANTIDAD" Width="*"/>
                <DataGridTextColumn Header="IMPORTE" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnAgregar" Grid.ColumnSpan="2" Content="Agregar" Grid.Column="9" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="6" VerticalAlignment="Top" Width="101" Height="42" Grid.RowSpan="2"/>
        <Button Name="btnEliminar" Grid.ColumnSpan="2" Content="Eliminar" Grid.Column="9" HorizontalAlignment="Left" Margin="12,15,0,0" Grid.Row="8" VerticalAlignment="Top" Width="101" Height="42" Grid.RowSpan="2"/>
        <Button Name="btnFactura" Grid.ColumnSpan="2" Content="Facturar" Grid.Column="9" HorizontalAlignment="Left" Margin="14,15,0,0" Grid.Row="10" VerticalAlignment="Top" Width="99" Height="42" Grid.RowSpan="2"/>

        <Label Content="Subtotal:" Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center"  Margin="0,8,0,0" FontSize="18" Foreground="White" />
        <TextBox Name="txtSubtotal" Grid.Row="12" Grid.Column="3" FontSize="18" Margin="0,10,0,0"  Background="White"/>
        <Label Content="Descuento:" Grid.Row="12" Grid.Column="4" Margin="2,8,2,0" FontSize="18" Foreground="White" />
        <TextBox Name="txtDescuento" Grid.Row="12" Grid.Column="5" FontSize="18" Margin="0,10,0,0"  Background="White"/>
        <Label Content="ISV:" Grid.Row="12" Grid.Column="6" Margin="0,8,0,0" FontSize="18" Foreground="White" HorizontalAlignment="Center" />
        <TextBox Name="txtIsv" Grid.Row="12" Grid.Column="7" FontSize="18" Margin="0,8,0,0"  Background="White"/>
        <Label Content="Total:" Grid.Row="12" Grid.Column="8" Margin="0,8,0,0" FontSize="18" Foreground="White" HorizontalAlignment="Center" />
        <TextBox Name="txtTotal" Grid.Row="12" Grid.Column="9" FontSize="18" Margin="14,8,48,0"  Background="White" Grid.ColumnSpan="2"/>

    </Grid>
</UserControl>
